<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="#D3171F2E"
    >

    <ImageView
        android:id="@+id/imagemTimeUm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/nomeClubeUm"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/imagemTimeUm"
        android:gravity="center"
        android:text="Nome clube"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/nomeClubeUm"
        android:text="00.00"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/nomeClubeDois"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@+id/imagemTimeDois"
        android:gravity="center_vertical"
        android:text="Nome clube"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imagemTimeDois"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imagemTimeUm"
        android:layout_marginTop="3dp"
        android:background="#A3A0A0"/>


    <TextView
        android:id="@+id/horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/data"
        android:layout_marginStart="43dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/nomeClubeUm"
        android:text="00:00" />


</RelativeLayout>