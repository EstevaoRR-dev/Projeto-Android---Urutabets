<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#C4040529"
    tools:context=".fragments.AdminPage">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tab_Layout_admin_control"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="#7c7c7c"
        app:tabIndicatorGravity="bottom"
        app:tabSelectedTextColor="@color/black"
        android:background="#f5f5f5"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorAnimationDuration="250"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorColor="#8A8A8A"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager2_admin"/>

</LinearLayout>